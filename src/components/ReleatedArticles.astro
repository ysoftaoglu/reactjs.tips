---
const { articles } = Astro.props
---

<div class="flex flex-col mt-16 mb-10 not-prose">
  <hr class="w-full border-lightgray dark:border-zinc-800" />
  <div class="mx-auto -mt-5 bg-white dark:bg-zinc-800 dark:border-zinc-800 py-2 px-3 text-sm font-bold rounded-md border">
    İlginizi Çekebilecek Yazılar
  </div>
</div>

<ul class="not-prose">
  {articles.map((article) => (
    <li class="mb-3 last:mb-0">
      <a class="border-dashed font-semibold text-lg text-slate-900 dark:text-zinc-200 dark:decoration-zinc-700 underline decoration-dashed decoration-slate-300 hover:decoration-slate-400 dark:hover:decoration-zinc-500 underline-offset-8 pb-0.5 inline-block leading-relaxed" href={`/article/${article.slug}`}>{article.data.title}</a>
    </li>
  ))}
</ul>
